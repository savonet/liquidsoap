opam-version: "2.0"
name: "liquidsoap"
maintainer: "romain.beauxis@gmail.com"
homepage: "https://github.com/savonet/liquidsoap"
authors: "The Savonet Team <savonet-users@lists.sourceforge.net>"
build: [
  ["./bootstrap"] {dev}
  ["./configure" "--prefix" prefix "--sbindir=%{lib}%/liquidsoap/sbin" "--libexecdir=%{lib}%/liquidsoap/libexec" "--sysconfdir=%{lib}%/liquidsoap/etc" "--sharedstatedir=%{lib}%/liquidsoap/com" "--localstatedir=%{lib}%/liquidsoap/var" "--libdir=%{lib}%/liquidsoap/lib" "--includedir=%{lib}%/liquidsoap/include" "--datarootdir=%{lib}%/liquidsoap/share" "--disable-graphics" "--with-user=dummy" "--with-group=dummy"]
  [make "clean"]
  [make]
]
install: [
  [make "install"]
]
remove: [
  ["rm" "-rf" "%{lib}%/liquidsoap" "%{prefix}%/bin/liquidsoap"]
]
depends: [
  "ocaml" {>= "4.08"}
  "camomile" {>= "1.0.0"}
  "dtools" {>= "0.4.1"}
  "duppy" {>= "0.8.0"}
  "menhir"
  "mm" {>= "0.4.1"}
  "ocamlfind" {build}
  "pcre"
  "sedlex" {>= "2.0"}
]
depopts: [
  "alsa"
  "ao"
  "bjack"
  "camlimages"
  "cry"
  "dssi"
  "faad"
  "fdkaac"
  "ffmpeg"
  "flac"
  "frei0r"
  "gavl"
  "gd"
  "graphics"
  "gstreamer"
  "inotify"
  "ladspa"
  "lame"
  "lastfm"
  "lo"
  "mad"
  "magic"
  "sdl-liquidsoap"
  "ogg"
  "opus"
  "osx-secure-transport"
  "portaudio"
  "pulseaudio"
  "samplerate"
  "shine"
  "soundtouch"
  "speex"
  "ssl"
  "taglib"
  "theora"
  "vorbis"
  "xmlplaylist"
  "yojson" 
]
conflicts: [
  "alsa" {< "0.2.1"}
  "ao" {< "0.2.0"}
  "bjack" {< "0.1.3"}
  "cry" {< "0.6.0"}
  "dssi" {< "0.1.1"}
  "faad" {< "0.4.0"}
  "fdkaac" {< "0.2.1"}
  "ffmpeg" {< "0.2.0"}
  "flac" {< "0.1.2"}
  "frei0r" {< "0.1.0"}
  "gavl" {< "0.1.4"}
  "gstreamer" {< "0.3.0"}
  "inotify" {< "1.0"}
  "ladspa" {< "0.1.4"}
  "lame" {< "0.3.2"}
  "lastfm" {< "0.3.0"}
  "lo" {< "0.1.2"}
  "mad" {< "0.1.4"}
  "magic" {< "0.6"}
  "ogg" {< "0.5.0"}
  "opus" {< "0.1.1"}
  "portaudio" {< "0.2.0"}
  "pulseaudio" {< "0.1.2"}
  "samplerate" {< "0.1.1"}
  "shine" {< "0.2.0"}
  "soundtouch" {< "0.1.7"}
  "speex" {< "0.2.1"}
  "ssl" {< "0.5.2"}
  "taglib" {< "0.3.0"}
  "theora" {< "0.3.1"}
  "vorbis" {< "0.7.0"}
  "xmlplaylist" {< "0.1.3"}
]
depexts: [
  ["automake" "autoconf"] {os-distribution = "alpine"}
  ["automake" "autoconf"] {os-distribution = "centos"}
  ["automake" "autoconf"] {os-distribution = "fedora"}
  ["automake" "autoconf"] {os-family = "suse"}
  ["automake" "autoconf"] {os-distribution = "debian"}
  ["automake" "autoconf"] {os-distribution = "ubuntu"}
]
bug-reports: "https://github.com/savonet/liquidsoap/issues"
dev-repo: "git+https://github.com/savonet/liquidsoap.git"
synopsis: "Swiss-army knife for multimedia streaming"
description: """
Liquidsoap is a powerful and flexible language for describing your
streams. It offers a rich collection of operators that you can combine
at will, giving you more power than you need for creating or
transforming streams. But liquidsoap is still very light and easy to
use, in the Unix tradition of simple strong components working
together."""
flags: light-uninstall
